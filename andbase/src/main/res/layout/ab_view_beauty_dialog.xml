<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dialog_message_layout"
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:layout_centerInParent="true"
        android:layout_margin="16dip"
        android:background="@drawable/ic_beauty_dialog_bg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.andbase.library.view.imageview.AbSuitableImageView
                    android:id="@+id/dialog_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/dialog_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="10dip"
                    android:text="消息内容"
                    android:textStyle="bold"
                    android:textColor="@color/app_text_dark"
                    android:textSize="20sp" />

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_message_layout"
        android:layout_marginTop="50dip"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_close_button"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:background="@drawable/ic_beauty_dialog_close" />
    </LinearLayout>


</RelativeLayout>